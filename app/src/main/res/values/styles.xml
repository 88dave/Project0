<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>

    <style name="General" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>
    <style name="AllButtons" parent="General">
        <item name="android:onClick">toastMe</item>
    </style>
    <style name="MostButtonsStyle" parent="AllButtons" >
        <item name="android:background">@drawable/mostbuttons</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>
    <style name="CapstoneButtonStyle" parent="AllButtons" >
        <item name="android:background">@drawable/capstonebutton</item>
    </style>
    <style name="Title" parent="General">
        <item name="android:labelTextSize">20dp</item>
        <item name="android:gravity">center</item>
    </style>

</resources>
